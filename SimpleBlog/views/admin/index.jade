h2 Admin

h3 Current blog entries

table.adminPosts(width="100%", style="text-align: left;")
	thead
		tr
			th Post ID
			th Title
			th Time posted
	tbody
		- posts.forEach(function(item){
		tr
			td #{item.bid}
			td 
				a(href="/admin/posts/" + item.bid) #{item.title}
			td #{item.posted}
		- })

a(href="/admin/posts/") Add new post 